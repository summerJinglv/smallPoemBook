/* pages/mapBD/mapBD.wxss */

.map_container{
    height: 600rpx;
    width: 100%;
}

.map {
    height: 100%;
    width: 100%;
}
.weather-i{width:110rpx;height:110rpx;position: absolute;right:20rpx;top:50rpx;z-index: 2;}
.now-location{width:110rpx;height:110rpx;position: absolute;right:20rpx;top:450rpx;z-index: 2;}
.input-item{display: flex;align-items: center;font-size: 28rpx;padding:20rpx;border-bottom:1px dashed #ccc}
.input-item input{flex:1}
.input-item image{width:45rpx;height:45rpx;}
.tip{font-size: 24rpx;color:#999;text-align: center;padding:20rpx;}
.sug-item{padding:10rpx 20rpx;font-size: 24rpx;color:#666;display: flex;align-items: center}
.sug-item image{width:26rpx;height:26rpx;margin-right: 20rpx;}
.sug-list{padding:20rpx 0}
.weather-box{font-size: 24rpx;position: fixed;top:65rpx;right:25%;padding:10rpx;
border-radius: 10rpx;
background-color: #fadb4f;  
background-image: linear-gradient(to bottom, #fadb4f,  #ffb491);
color:#fff;
}
.w-item{padding:10rpx;}
.tit{font-size: 40rpx;font-weight: bold;font-style: italic}
.num{font-size: 50rpx;margin-top: 20rpx}