/* pages/login/login.wxss */
.wrap {
  width: 100vm;
  height: 100vh;
  position: relative;
  overflow: hidden;
}
.bg {
  width: 100vw;
  height: 100vh;
  position: absolute;
  bottom: 0;
  left: 0;
}
.start-btn{
  width:300rpx;
  height:88rpx;
  line-height: 88rpx;
  position:absolute;
  left:50%;
  bottom:200rpx;
  margin-left: -150rpx;
  background: #436b68;
  color:#fff;
}

.user-box{
  text-align: center;
  position: absolute;
  width:100%;
  bottom:400rpx;
  z-index: 2;
}
.userinfo-avatar{width:80rpx;height:80rpx;border-radius: 40rpx;box-shadow: 2rpx 3rpx 10px #c2d0d0}
.userinfo-nickname{font-size: 28rpx;display: block;color:#333}
.ripple {
    background-color: rgba(0, 0, 0, 0.6);
    border-radius: 100%;
    height:10px;
    width:10px;
    margin-top: -90px;
    position: absolute;
    transform:scale(0);
    -webkit-transform: scale(0);
    overflow: hidden
}
@-webkit-keyframes ripple {
    100% {
    -webkit-transform: scale(12);
    transform: scale(12);
    background-color: transparent;
    }
}