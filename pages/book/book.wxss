/**index.wxss**/
.wrap{position: relative;height:100vh;width:100vw;overflow: hidden}
.bg{position: absolute;top:0;left:0;width:100%}
.card-list{position: relative;z-index: 2;padding-top:112rpx;width:500rpx;margin: 0 auto;}
.card-item{width:500rpx;height:700rpx;position: relative;float:left;

background:rgba(255,255,255,0.8);border-radius: 25rpx;box-shadow:0 -10rpx 20rpx rgba(205,211,207,0.2);z-index: 3}
.card-box{position: absolute;top:50%;left:50%;transform: translate(-50%,-50%);}
.card-item text{display: block;font-size: 28rpx;}
.card-item .title{font-size: 34rpx;text-align: center;}
.card-item .author{text-align: center;color:#999;margin-top: 40rpx;}
.card-item .content{text-align: center;line-height: 50rpx;margin-top: 50rpx;white-space:nowrap;padding-left:1em;}
.dot-box{position: relative;z-index: 2;top:0;text-align: center}
.dot-list{background: rgba(100,100,100,0.5);display: inline-block;font-size: 0}
.dot{width:24rpx;height:12rpx;display: inline-block;}
.dot.active{background: rgba(0,0,0,0.5)}
.card-item .page{position: absolute;bottom:15rpx;right:35rpx;font-size:22rpx;color:#888}
.change{margin:100rpx auto 0;font-size: 26rpx;background: rgba(255,255,255,0.5);
border:4rpx solid rgba(100,100,100,0.2);
width:200rpx;height:80rpx;line-height:80rpx;}
.card-wrap{height:700rpx;}
.music{position: fixed;right:40rpx;top:40rpx;font-size: 0}
.music-btn{width:80rpx;height:80rpx;}
.music.ani{animation: music 1.5s infinite linear}
 @-webkit-keyframes music {
    from {
       transform:rotate(0deg);
    }

    to {
       transform:rotate(360deg);
    }
}
@keyframes music {
    from {
       transform:rotate(0deg);
    }

    to {
       transform:rotate(360deg);
    }
}