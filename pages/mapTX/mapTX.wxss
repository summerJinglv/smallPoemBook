.map-index{width:100%;height:86vh}
.now-location{width:110rpx;height:110rpx;position: absolute;right:20rpx;bottom:250rpx;}
.scale-max{width:110rpx;height:110rpx;position: absolute;right:20rpx;bottom:500rpx;}
.scale-min{width:110rpx;height:110rpx;position: absolute;right:20rpx;bottom:400rpx;}
